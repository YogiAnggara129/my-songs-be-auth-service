{
  "name": "auth-service",
  "version": "1.0.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "format": "prettier --write .",
    "typeorm": "typeorm-ts-node-esm --dataSource ./src/infrastructure/db/data-source.ts",
    "migration:generate": "npm run typeorm -- migration:generate src/infrastructure/db/migrations/$npm_config_name",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "author": "Yogi",
  "license": "ISC",
  "description": "A simple authentication service using TypeScript, Express, and PostgreSQL.",
  "type": "module",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "inversify": "^7.5.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.30",
    "@types/uuid": "^10.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typeorm": "^0.3.24",
    "typeorm-ts-node-esm": "^0.3.20",
    "typescript": "^5.8.3"
  }
}
